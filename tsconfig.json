{
  "compilerOptions": {
    "outDir": "dist",
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "resolveJsonModule": true,
    "strict": true,
    "target": "es2022",
    "typeRoots" : ["./node_modules/@types", "./src/@types"]
  }
}
